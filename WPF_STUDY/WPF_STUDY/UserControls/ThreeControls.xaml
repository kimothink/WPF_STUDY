<UserControl x:Class="WPF_STUDY.UserControls.ThreeControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_STUDY.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300"
             x:Name="root">
    <Grid>
        <Label Content="{Binding MyText , ElementName=root}" HorizontalAlignment="Left" Height="30" Margin="68,34,0,0" VerticalAlignment="Top" Width="82"/>
        <Button Command="{Binding MyCommand ,ElementName=root}" Content="Button" HorizontalAlignment="Left" Margin="48,93,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
